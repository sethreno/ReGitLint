<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net8.0;net6.0</TargetFrameworks>
    <LangVersion>10.0</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>
  <PropertyGroup>
    <PackAsTool>true</PackAsTool>
    <PackageId>ReGitLint</PackageId>
    <PackageVersion>6.1.0-alpha</PackageVersion>
    <ToolCommandName>regitlint</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <RepositoryUrl>https://github.com/sethreno/ReGitLint</RepositoryUrl>
    <Authors>Seth Reno</Authors>
    <PackageDescription>Low friction code formatting for .net projects</PackageDescription>
    <Copyright>Copyright 2020 Seth Reno</Copyright>
    <PackageTags>.net;c#;git;lint;ci</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ManyConsole" Version="2.0.1"/>
  </ItemGroup>
</Project>
